<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Paiement Sécurisé</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f2f2f2;
    }
    .container-payment {
      max-width: 500px;
      margin: 50px auto;
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .form-label {
      font-weight: bold;
    }
    .fixed-price {
      font-size: 1.25rem;
      font-weight: bold;
      color: #333;
    }
  </style>
</head>
<body>
  {{#errorMessage}}
    <div class="container">
      <div class="alert alert-danger mt-3" role="alert">
        {{errorMessage}}
      </div>
    </div>
  {{/errorMessage}}
  {{#pawaPayMessage}}
    <div class="container">
      <div class="alert alert-{{pawaPayStatus}} mt-3" role="alert">
        {{pawaPayMessage}}
      </div>
    </div>
  {{/pawaPayMessage}}
  {{#depositId}}
    <div class="container">
      <div class="alert alert-info mt-3" role="alert">
        Transaction ID: {{depositId}}
      </div>
    </div>
  {{/depositId}}
